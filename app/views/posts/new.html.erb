<div class='container'>
	<h1 class='text-center'>Add a new post.</h1>
	<p class='text-center'>Soon I'll have auth working and you'll be able to post with your name!</p>
	<hr>

	<div class='col-md-6 col-md-offset-3'>

		<%= form_for @post, html: {class: "form-group"} do |f| %>
		  <%= f.label :title %>:
		  <%= f.text_field :title, class: "form-control", placeholder: "Add title here...", :required=>true, :autofocus =>true %><br />

		  <%= f.label :content %>:
		  <%= f.text_area :content, class: "form-control", :required=>true, placeholder: "Add content here..."  %><br />

		  <%= f.submit class: 'btn btn-primary'%>
		<% end %>
	</div>
</div>

