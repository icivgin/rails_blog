<%= render 'navbar' %>

<div class='container'>
	<h1 class='text-center'>Edit post with id <%= @post.id %>.</h1>
	<p class='text-center'>Rails is really making this easy...</p>
	<hr>

	<div class='col-md-6 col-md-offset-3'>

		<%= form_for @post, html: {class: "form-group"} do |f| %>
		  <%= f.label :title %>:
		  <%= f.text_field :title, class: "form-control", placeholder: "Add title here..." %><br />

		  <%= f.label :content %>:
		  <%= f.text_area :content, class: "form-control", placeholder: "Add content here..."  %><br />

		  <%= f.submit class: 'btn btn-primary'%>
		  <%= button_tag "Cancel", href: "/posts", class: "btn btn-primary" %>
		<% end %>
	</div>
</div>